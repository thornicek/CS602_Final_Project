<!-- Blog entries -->
<div class="w3-col l8 s12">
  <!-- Blog entry -->
  <div class="w3-card-4 w3-margin w3-white">
    <div class="w3-container">
      <h3><b></b></h3>
      <h5>{{data.title}} <span class="w3-opacity">April 7, 2014</span></h5>
    </div>

    <div class="w3-container">
      <p>{{data.content}}</p>
      <div class="w3-row">
        <div class="w3-col m8 s12">
          <p><a href="/"><button class="w3-button w3-padding-large w3-white w3-border"><b>Home Page</b></button></a></p>
        </div>
        <div class="w3-col m4 w3-hide-small">
          <p><span class="w3-padding-large w3-right"><b>Comments</b> <span class="w3-tag">0</span></span></p>
        </div>
        
      </div>
        <!-- Comments form -->
    <form method="POST" action="/post-feedback">
        <label>Name:<input type:"text" name="username" required></label>
        <br>
        <label>Comment:<br><textarea name="comment"></textarea></label>
        <br>
        <input type="submit" value="Submit">
            
<!-- END BLOG ENTRIES -->
</div>